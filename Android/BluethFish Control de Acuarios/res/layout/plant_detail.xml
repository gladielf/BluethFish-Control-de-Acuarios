		            android:id="@+id/textViewPlantGhMaxDetail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:textIsSelectable="false" />    
			</LinearLayout> 
		</RelativeLayout>
        
