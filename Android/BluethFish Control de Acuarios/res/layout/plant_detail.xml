	        android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:paddingTop="12dp"
	        android:text="@string/plant_Description" />
	    <ScrollView
	        android:id="@+id/scrollViewPlantDescription"
	        android:layout_width="match_parent"
	        android:layout_height="150dp"
	        android:fadeScrollbars="false" >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	            <TextView
	                android:id="@+id/textViewPlantDescriptionDetail"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="12dp"
	                android:paddingRight="12dp"
	                android:textIsSelectable="false" />
	        </LinearLayout>
	    </ScrollView>       
       
	   <TextView
	        android:id="@+id/textViewPlantHabitat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:paddingTop="12dp"
	        android:text="@string/plant_Habitat" />
	    <ScrollView
	        android:id="@+id/scrollViewPlantHabitat"
	        android:layout_width="match_parent"
	        android:layout_height="100dp"
	        android:fadeScrollbars="false" >
